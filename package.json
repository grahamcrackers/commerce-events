{
    "name": "commerce-events-monorepo",
    "private": true,
    "version": "0.0.0",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "engines": {
        "npm": ">=7.0.0",
        "node": ">=14.0.0"
    },
    "packageManager": "yarn@1.22.17",
    "scripts": {
        "start": "turbo run start --parallel --continue",
        "build": "turbo run build",
        "dev": "turbo run dev --parallel",
        "test": "turbo run test",
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint:fix",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "prepare": "husky install"
    },
    "devDependencies": {
        "husky": ">=6",
        "lint-staged": ">=10",
        "prettier": "^2.5.1",
        "turbo": "latest"
    },
    "lint-staged": {
        "apps/**/*.{js,jsx,ts,tsx}": [
            "eslint --fix"
        ],
        "package/**/*.s": [
            "eslint --fix"
        ],
        "*.json": "prettier --write"
    }
}
